extends layout

block content
	div.home-page-container.m-0

		div.logo
			img(src="static/pictures/logo.jpg")

		div.input-container.mt-200.w-530.h-300.text-bold
			form.form-horizontal.mt-50.ml-20.mr-20(role="form")
				div.form-group.ml-0.mr-0
					label.col-sm-3.col-xs-3.control-label.fs-20(for="inputUsername") 用户名
					div.col-sm-9.col-xs-9
						input#inputUsername.form-control.h-40.fs-16(type="text" placeholder="用户名")
				div.form-group.ml-0.mr-0
					label.col-sm-3.col-xs-3.control-label.fs-20(for="inputPassword") 密码:
					div.col-sm-9.col-xs-9
						input#inputPassword.form-control.h-40.fs-16(type="password" placeholder="密码")
				div.form-group.ml-0.mr-0
					div.col-sm-offset-3.col-sm-9.col-xs-offset-3.col-xs-9
						div.checkbox.fs-18
							label
								input(type="checkbox")
								span 记住密码 
				div.form-group
					div.col-sm-offset-6.col-sm-2.col-xs-offset-6.col-xs-2
						button.btn.btn-success.h-50.fs-22(type="submit") 登录
					div.col-sm-offset-1.col-sm-3.col-xs-offset-1.col-xs-3
						button#signup.btn.btn-info.h-50.fs-22(type="button") 注册
		
		div.logo-right
			div.logo2
				img(src="static/pictures/logo2.jpg")
			div.logo3
				img(src="static/pictures/logo3.jpg")
