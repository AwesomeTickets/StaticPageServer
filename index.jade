extends layout

block content
	div.home-page-container.bg-color-index.m-0

		div.logo
			img(src="static/pictures/logo.jpg")

		div.input-container-left.mt-200.w-530.h-300.text-bold
			form.form-horizontal.mt-50.ml-20.mr-20(role="form" method="post" action="/signin")
				div.form-group.ml-0.mr-0
					label.col-sm-3.col-xs-3.control-label.fs-20(for="inputUsernameSignin") 用户名:
					div.col-sm-9.col-xs-9
						input#inputUsernameSignin.form-control.h-40.fs-16(type="text" placeholder="用户名" name="inputUsernameSignin")
				div.form-group.ml-0.mr-0
					label.col-sm-3.col-xs-3.control-label.fs-20(for="inputPasswordSignin") 密码:
					div.col-sm-9.col-xs-9
						input#inputPasswordSignin.form-control.h-40.fs-16(type="password" placeholder="密码" name="inputPasswordSignin")
				//- div.form-group.ml-0.mr-0
				//- 	div.col-sm-offset-3.col-sm-9.col-xs-offset-3.col-xs-9
				//- 		div.checkbox.fs-18
				//- 			label
				//- 				input(type="checkbox")
				//- 				span 记住密码 
				div#signinErrorMessage.fs-16.jian.ml-40.h-22
				div.form-group.mt-30
					div.col-sm-offset-6.col-sm-2.col-xs-offset-6.col-xs-2
						button#goToSignup.btn.btn-info.h-50.fs-22(type="button") 注册
					div.col-sm-offset-1.col-sm-3.col-xs-offset-1.col-xs-3
						button#signin.btn.btn-danger.h-50.fs-22(type="submit" name="signin") 登录

		div.logo-b-right
			div.logo2-right
				img(src="static/pictures/logo2.jpg")
			div.logo3-right
				img(src="static/pictures/logo3.jpg")
