extends ../layout

block content
	div.home-page-container.m-0

		div.logo
			img(src="../static/pictures/logo.jpg")

		div.input-container.mt-200.w-530.h-490.text-bold
			form.form-horizontal.mt-50.ml-20.mr-20(role="form")
				div.form-group.ml-0.mr-0
					label.col-sm-3.col-xs-3.control-label.fs-20(for="inputName") 姓名
					div.col-sm-9.col-xs-9
						input#inputName.form-control.h-40.fs-16(type="text" placeholder="姓名")
				div.form-group.ml-0.mr-0
					label.col-sm-3.col-xs-3.control-label.fs-20(for="inputSex") 性别
					div.col-sm-9.col-xs-9
						input#inputSex.form-control.h-40.fs-16(type="text" placeholder="性别")
				div.form-group.ml-0.mr-0
					label.col-sm-3.col-xs-3.control-label.fs-20(for="inputPhone") 电话
					div.col-sm-9.col-xs-9
						input#inputPhone.form-control.h-40.fs-16(type="text" placeholder="电话")
				div.form-group.ml-0.mr-0
					label.col-sm-3.col-xs-3.control-label.fs-20(for="inputAddress") 地址
					div.col-sm-9.col-xs-9
						input#inputAddress.form-control.h-40.fs-16(type="text" placeholder="地址")
				div.form-group.ml-0.mr-0
					label.col-sm-3.col-xs-3.control-label.fs-20(for="inputUsernameSignup") 用户名
					div.col-sm-9.col-xs-9
						input#inputUsernameSignup.form-control.h-40.fs-16(type="text" placeholder="用户名")
				div.form-group.ml-0.mr-0
					label.col-sm-3.col-xs-3.control-label.fs-20(for="inputPasswordSignup") 密码:
					div.col-sm-9.col-xs-9
						input#inputPasswordSignup.form-control.h-40.fs-16(type="" placeholder="密码")
				div.form-group
					div.col-sm-offset-3.col-sm-6.col-xs-offset-3.col-xs-6
						button.btn.btn-success.h-50.w-250.fs-22(type="submit") 注册
		
		div.logo-right
			div.logo2
				img(src="../static/pictures/logo2.jpg")
			div.logo3
				img(src="../static/pictures/logo3.jpg")
